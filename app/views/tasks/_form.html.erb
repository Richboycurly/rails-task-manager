<%= form_with model: task do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :details, class: "form-label"%>
    <%= f.text_field :details, class: "form-control" %>
  </div>
  <div class="mb-3 form-check">
    <% if task.persisted? %>
      <%= f.label :completed, class: "form-check-label" %>
      <%= f.check_box :completed, class: "form-check-input" %>
    <% end %>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  <%= link_to "Back to list", tasks_path, class: "btn btn-primary" %>
<% end %>
