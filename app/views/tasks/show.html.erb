



<div class="card">
  <div class="card-header">
    <h1> <%= @task.title %> </h1>
  </div>
  <div class="card-body">
    <p class="fs-5"> <%= @task.details %> </p>
    <p> <i class="fa-regular fa-square<%='-check' if @task.completed %>"> </i>Completed</p>
  </div>
<%= link_to "Back to list", tasks_path, class: "btn btn-primary" %>
<%= link_to "Edit task", edit_task_path, class: "btn btn-warning" %>
<%= link_to "Delete",
  task_path(@task), class: "btn btn-danger",
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</div>
